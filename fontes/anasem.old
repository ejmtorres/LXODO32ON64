PUBLIC void GerarFator(int *R, int  *T, int Tk, char *Id)
{
  register int Ind; /* indice da tab. de simb. */
  register int C;   /* categoria */
  register int N;   /* nivel */
  long         D;   /* deslocamento */

  *R = AlocarRegistrador();
  if (Tk == NUMERO)
  {
    *T = INTEIRO;
    fprintf(ArqAsm, " %30s mov  %s, %s\n", BRANCO, Reg32[*R], Id);
  }
  if (Tk == IDENTIF)
  {
    if ((Ind = Procurar(Id)) == -1) Abortar(3);
    else
    {
      *T = Tabela[Ind]->Tipo;
      D  = Tabela[Ind]->Desl;
      N  = Tabela[Ind]->Nivel;
      C  = Tabela[Ind]->Categ;
    }
    if ((C != CVAR) &&
        (C != CPAR)) Abortar(6);
    /* variavel global */
    if (N == NGLOBAL)
    {
      if (*T == INTEIRO)
        fprintf(ArqAsm, " %30s mov  %s, %s:_%s\n", BRANCO, Reg32[*R],
                                        SEG_DAD, Id);
      else
      if (*T == PONTEIRO)
        fprintf(ArqAsm, " %30s mov  %s, %s:_%s\n", BRANCO, Reg32[*R],
                                        SEG_DAD, Id);
      else
      if (*T == CADEIA)
        fprintf(ArqAsm, " %30s mov  %s, offset %s:_%s\n", BRANCO, Reg32[*R],
                                        SEG_DAD, Id);
    }
    else
    {
    /* variavel local */
      if (C == CVAR)
      {
        if (*T == INTEIRO)
          fprintf(ArqAsm, " %30s mov  %s, %s:[ebp-%ld]\n", BRANCO, Reg32[*R],
                                          SEG_DAD, D);
        else
        if (*T == PONTEIRO)
          fprintf(ArqAsm, " %30s mov  %s, %s:[ebp-%ld]\n", BRANCO, Reg32[*R],
                                          SEG_DAD, D);
        else
        if (*T == CADEIA)
          fprintf(ArqAsm, " %30s mov  %s, %s:[ebp-%ld]\n", BRANCO, Reg32[*R],
                                          SEG_DAD, D);
      }
      else
      {
      /* parametro */
        if (*T == INTEIRO)
          fprintf(ArqAsm, " %30s mov  %s, %s:[ebp+%ld]\n", BRANCO, Reg32[*R],
                                          SEG_DAD, D);
        else
        if (*T == PONTEIRO)
          fprintf(ArqAsm, " %30s mov  %s, %s:[ebp+%ld]\n", BRANCO, Reg32[*R],
                                          SEG_DAD, D);
        else
        if (*T == CADEIA)
          fprintf(ArqAsm, " %30s mov  %s, %s:[ebp+%ld]\n", BRANCO, Reg32[*R],
                                          SEG_DAD, D);
      }
    }
  }
}
/*--------------------------*/
/* gerar Fator -> valor(Id) */
/*--------------------------*/
PUBLIC void GerarFatorValor(int *R, int *T, char *Id)
{
  register int Ind; /* indice na tabela */
  register int N;   /* nivel */
  register int C;   /* categoria */
  long         D;   /* deslocamento */

  if ((Ind = Procurar(Id)) == -1) Abortar(3);
  else
  {
    *T = Tabela[Ind]->Tipo;
    N  = Tabela[Ind]->Nivel;
    C  = Tabela[Ind]->Categ;
    D  = Tabela[Ind]->Desl;
  }
  if (*T != PONTEIRO) Abortar(5);
  else *T = INTEIRO;
  *R = AlocarRegistrador();
  if (N == NLOCAL)
    if (C == CVAR) /* variavel local */
      fprintf(ArqAsm, " %30s mov  %s, %s:[ebp-%ld]\n", BRANCO, Reg32[*R],
                                      SEG_DAD, D);
    else           /* parametro */
      fprintf(ArqAsm, " %30s mov  %s, %s:[ebp+%ld]\n", BRANCO, Reg32[*R],
                                      SEG_DAD, D);
  else             /* variavel global */
    fprintf(ArqAsm, " %30s mov  %s, %s:_%s\n", BRANCO, Reg32[*R], SEG_DAD, Id);
  if (*R) /* nao eh ebx */
  {
    fprintf(ArqAsm, " %30s push ebx\n",           BRANCO);
    fprintf(ArqAsm, " %30s mov  ebx, %s\n",       BRANCO, Reg32[*R]);
    fprintf(ArqAsm, " %30s mov  ebx, %s:[ebx]\n", BRANCO, SEG_DAD);
    fprintf(ArqAsm, " %30s mov  %s, ebx\n",       BRANCO, Reg32[*R]);
    fprintf(ArqAsm, " %30s pop  ebx\n",           BRANCO);
  }
  else    /* eh ebx */
  {
    fprintf(ArqAsm, " %30s mov  ebx, %s:[ebx]\n", BRANCO, SEG_DAD);
  }
}

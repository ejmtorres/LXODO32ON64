}
/*------------------------------*/
/* gerar atribuicao mov id, reg */
/*------------------------------*/
PUBLIC void GerarAtribuicao(char *Id, int T)
{
  register int Ind;
  register int Tipo;
  register int Catg;
  register int Nivl;
  long         Desl;

  if ((Ind = Procurar(Id)) == -1) Abortar(3);
  else
  {
    Tipo = Tabela[Ind]->Tipo;
    Catg = Tabela[Ind]->Categ;
    Desl = Tabela[Ind]->Desl;
    Nivl = Tabela[Ind]->Nivel;
  }
  if ((Catg != CVAR) &&
      (Catg != CPAR)) Abortar(6);
  if (Tipo != T)      Abortar(4);
  /* variavel global */
  if (Nivl == NGLOBAL)
  {
    if (Tipo == INTEIRO)
      fprintf(ArqAsm, " %30s mov  %s:_%s, ebx\n", BRANCO, SEG_DAD, Id);
    else
    if (Tipo == PONTEIRO)
      fprintf(ArqAsm, " %30s mov  %s:_%s, ebx\n", BRANCO, SEG_DAD, Id);
    else
    if (Tipo == CADEIA)
    {
      fprintf(ArqAsm, " %30s mov  ecx, offset %s:_%s\n", BRANCO, SEG_DAD, Id);
      fprintf(ArqAsm, " %30s push ecx\n",                BRANCO);
      fprintf(ArqAsm, " %30s push ebx\n",                BRANCO);
      fprintf(ArqAsm, "extrn _copcad:near\n");
      fprintf(ArqAsm, " %30s call _copcad\n",            BRANCO);
      fprintf(ArqAsm, " %30s add  esp, 8\n",             BRANCO);
    }
  }
  else
  {
    /* variavel local */
    if (Catg == CVAR)
    {
      if (Tipo == INTEIRO)
        fprintf(ArqAsm, " %30s mov  %s:[ebp-%ld], ebx\n", BRANCO,
                                                  SEG_DAD, Desl);
      else
      if (Tipo == PONTEIRO)
        fprintf(ArqAsm, " %30s mov  %s:[ebp-%ld], ebx\n", BRANCO,
                                                  SEG_DAD, Desl);
      else
      if (Tipo == CADEIA)
      {
        fprintf(ArqAsm, " %30s mov  ecx, %s:[ebp-%ld]\n", BRANCO,
                                         SEG_DAD, Desl);
        fprintf(ArqAsm, " %30s push ecx\n",               BRANCO);
        fprintf(ArqAsm, " %30s push ebx\n",               BRANCO);
        fprintf(ArqAsm, "extrn _copcad:near\n");
        fprintf(ArqAsm, " %30s call _copcad\n",           BRANCO);
        fprintf(ArqAsm, " %30s add  esp, 8\n",            BRANCO);
      }
    }
    else
    {
    /* parametro */
      if (Tipo == INTEIRO)
        fprintf(ArqAsm, " %30s mov  %s:[ebp+%ld], ebx\n", BRANCO,
                                                  SEG_DAD, Desl);
      else
      if (Tipo == PONTEIRO)
        fprintf(ArqAsm, " %30s mov  %s:[ebp+%ld], ebx\n", BRANCO,
                                                  SEG_DAD, Desl);
      else
      if (Tipo == CADEIA)
      {
        fprintf(ArqAsm, " %30s mov  ecx, %s:[ebp-%ld]\n", BRANCO,
                                         SEG_DAD, Desl);
        fprintf(ArqAsm, " %30s push ecx\n",               BRANCO);
        fprintf(ArqAsm, " %30s push ebx\n",               BRANCO);
        fprintf(ArqAsm, "extrn _copcad:near\n");
        fprintf(ArqAsm, " %30s call _copcad\n",           BRANCO);
        fprintf(ArqAsm, " %30s add  esp, 8\n",            BRANCO);
      }
    }
  }
  DesalocarRegistrador();
}
/*------------------------------*/
/* gerar atribuicao para vetor  */
/*------------------------------*/
PUBLIC void GerarAtribuicaoVetor(char *Id, int T)
{
  register int Ind;
  register int Tipo;
  register int Catg;

  if ((Ind = Procurar(Id)) == -1) Abortar(3);
  else
  {
    Tipo = Tabela[Ind]->Tipo;
    Tipo = Tabela[Tipo]->Tipo;
    Catg = Tabela[Ind]->Categ;
  }
  if (Catg != CVET) Abortar(6);
  if (Tipo != T)    Abortar(4);
  fprintf(ArqAsm, " %30s pop  eax\n", BRANCO);
  if ((Tipo == INTEIRO) || (Tipo == PONTEIRO))
  {
    fprintf(ArqAsm, " %30s xchg eax, ebx\n",      BRANCO);
    fprintf(ArqAsm, " %30s mov  %s:[ebx], eax\n", BRANCO, SEG_DAD);
  }
  else
  if (Tipo == CADEIA)
  {
    fprintf(ArqAsm, " %30s push eax\n",     BRANCO);
    fprintf(ArqAsm, " %30s push ebx\n",     BRANCO);
    fprintf(ArqAsm, "extrn _copcad:near\n");
    fprintf(ArqAsm, " %30s call _copcad\n", BRANCO);
    fprintf(ArqAsm, " %30s add  esp, 8\n",  BRANCO);
  }
  DesalocarRegistrador();
}
/*-------------------------------*/
/* gerar chamada de procedimento */
/*-------------------------------*/
PUBLIC void GerarChamada(char *Id, int NA, int NB)
{
  register int Ind; /* indice na tabela */
  register int Cat; /* categoria */
  register int NP;  /* numero de parametros */

  if ((Ind = Procurar(Id)) == -1)
  {
    Cat = CPROC;
    fprintf(ArqAsm, "extrn _%s:near\n", Id); /* id deve ser proc externa */
  }
  else
  {
    Cat = Tabela[Ind]->Categ;     /* id deve ser proc interna */
    if (Cat != CPROC) Abortar(6);
    NP  = Tabela[Ind]->Tipo;      /* contem o numero de parametros */
    if (NA > NP) Abortar(8);
    if (NA < NP) Abortar(9);
  }
  fprintf(ArqAsm, " %30s call _%s\n", BRANCO, Id);
  if (NB > 0)
    fprintf(ArqAsm, " %30s add  esp, %d\n", BRANCO, NB);
}

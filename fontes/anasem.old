/*----------------------------------*/
/* gerar expressao do tipo endereco */
/*----------------------------------*/
PUBLIC void GerarEndereco(char *Id, int *T)
{
  register int Ind;  /* indice da tab. de simb. */
  register int Catg; /* categoria */
  register int Nivl; /* nivel */
  register int Tipo; /* tipo */
  long         Desl; /* deslocamento */

  if ((Ind = Procurar(Id)) == -1) Abortar(3);
  if ((Tabela[Ind]->Categ != CVAR) &&
      (Tabela[Ind]->Categ != CPAR) &&
      (Tabela[Ind]->Categ != CVET)) Abortar(6);
  Desl = Tabela[Ind]->Desl;
  Nivl = Tabela[Ind]->Nivel;
  Tipo = Tabela[Ind]->Tipo;
  Catg = Tabela[Ind]->Categ;
  AlocarRegistrador(); /* ebx */
  /* variavel global */
  if (Nivl == NGLOBAL)
    fprintf(ArqAsm, " %30s mov  ebx, offset %s:_%s\n", BRANCO, SEG_DAD, Id);
  else
  {
  /* variavel local */
    if (Catg == CVET)
      fprintf(ArqAsm, " %30s lea  ebx, %s:[ebp-%ld]\n", BRANCO, SEG_DAD, Desl);
    else
    if (Catg == CVAR)
    {
      if (Tipo == INTEIRO)
        fprintf(ArqAsm, " %30s lea  ebx, %s:[ebp-%ld]\n", BRANCO,
                                         SEG_DAD, Desl);
      else
      if (Tipo == CADEIA)
        fprintf(ArqAsm, " %30s mov  ebx, %s:[ebp-%ld]\n", BRANCO,
                                         SEG_DAD, Desl);
      else
      if (Tipo == PONTEIRO)
        fprintf(ArqAsm, " %30s mov  ebx, %s:[ebp-%ld]\n", BRANCO,
                                         SEG_DAD, Desl);
    }
    else
    /* parametro */
    {
      if (Tipo == INTEIRO)
        fprintf(ArqAsm, " %30s lea  ebx, %s:[ebp+%ld]\n", BRANCO,
                                         SEG_DAD, Desl);
      else
      if (Tipo == CADEIA)
        fprintf(ArqAsm, " %30s mov  ebx, %s:[ebp+%ld]\n", BRANCO,
                                         SEG_DAD, Desl);
      else
      if (Tipo == PONTEIRO)
        fprintf(ArqAsm, " %30s mov  ebx, %s:[ebp+%ld]\n", BRANCO,
                                         SEG_DAD, Desl);
    }
  }
  *T = PONTEIRO;
}
/*--------------------------------*/
/* gerar expressao do tipo cadeia */
/*--------------------------------*/
PUBLIC void GerarCadeia(char *Id, int *T)
{
  register char *PtrId;
  register int   Cont;
  register int   Rot1;
  register int   Rot2;

  PtrId = Id;
  Rot1 = ObterRotulo();
  Rot2 = ObterRotulo();
  Cont  = 0;
  *T    = CADEIA;
  fprintf(ArqAsm, " %-30s jmp  R%d\n", BRANCO, Rot2);
  TerminarSegmentoDeCodigo();
  IniciarSegmentoDeDados();
  fprintf(ArqAsm, "R%-30d db '", Rot1);
  while (*PtrId)
  {
    if (Cont >= 40)
    {
      Cont = 0;
      fprintf(ArqAsm, "'\n %30s db '", BRANCO);
    }
    fprintf(ArqAsm, "%c", *PtrId++);
    Cont++;
  }
  fprintf(ArqAsm, "',0\n");
  TerminarSegmentoDeDados();
  IniciarSegmentoDeCodigo();
  fprintf(ArqAsm, "R%d:\n", Rot2);
  fprintf(ArqAsm, " %30s mov  %s, offset %s:R%d\n", BRANCO,
                                  Reg32[AlocarRegistrador()],
                                  SEG_DAD, Rot1);
}

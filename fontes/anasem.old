PUBLIC void DefinirSegmentoDePilha()
{
  fprintf(ArqAsm, "%-30s  segment dword public use32 'cdad'\n", SEG_DAD);
  fprintf(ArqAsm, "%-30s  assume  ds:%s\n", BRANCO, SEG_DAD);
  fprintf(ArqAsm, "%-30s  assume  es:%s\n", BRANCO, SEG_DAD);

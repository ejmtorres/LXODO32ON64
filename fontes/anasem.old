PUBLIC void GerarValor(int T, char *Id)
{
  register int Ind;  /* indice na tabela */
  register int Niv;  /* nivel */
  register int Cat;  /* categoria */
  register int TId;  /* tipo do Id */
  long         Desl; /* deslocamento */


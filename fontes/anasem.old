/*----------------------*/
/* terminar fator vetor */
/*----------------------*/
PUBLIC void TerminarFatorVetor(int NI, int TA, int R, char *Id)
{
  register int ND;  /* numero de dimensoes */
  register int I;
  register int Pos;
  register int Niv;
  register int Tip;
  long         Des;

  ND = ObterNumeroDeDimensoes(Id);
  if (NI > ND) Abortar(10);
  if (NI < ND) Abortar(11);
  Pos = Procurar(Id);
  Niv = Tabela[Pos]->Nivel;
  Des = Tabela[Pos]->Desl;
  Tip = Tabela[Pos]->Tipo;
  Tip = Tabela[Tip]->Tipo;
  TopoReg = TA;
  for (I=TA-1; I>=0; I--)
    fprintf(ArqAsm, " %30s pop  %s\n", BRANCO, Reg32[I]);
  if ((Tip == INTEIRO)||(Tip == PONTEIRO))
  {
    fprintf(ArqAsm, " %30s add  eax, eax\n", BRANCO);
    fprintf(ArqAsm, " %30s add  eax, eax\n", BRANCO);
    if (Niv == NGLOBAL)
      fprintf(ArqAsm, " %30s mov  %s, offset %s:_%s\n", BRANCO, Reg32[R],
                                      SEG_DAD, Id);
    else
      fprintf(ArqAsm, " %30s lea  %s, %s:[ebp-%ld]\n", BRANCO, Reg32[R],
                                      SEG_DAD, Des);
    fprintf(ArqAsm, " %30s add  %s, eax\n", BRANCO, Reg32[R]);
    if (R == 0) /* ebx ? */
    {
      fprintf(ArqAsm, " %30s mov  ebx, %s:[ebx]\n", BRANCO, SEG_DAD);
    }
    else
    {
      fprintf(ArqAsm, " %30s push ebx\n",          BRANCO);
      fprintf(ArqAsm, " %30s mov  ebx, %s\n",      BRANCO, Reg32[R]);
      fprintf(ArqAsm, " %30s mov  %s, %s:[ebx]\n", BRANCO, Reg32[R], SEG_DAD);
      fprintf(ArqAsm, " %30s pop  ebx\n",          BRANCO, Reg32[R]);
    }
  }
  else
  if (Tip == CADEIA)
  {
    fprintf(ArqAsm, " %30s mov  %s, %d\n", BRANCO, Reg32[R], NB_CADEIA+1);
    fprintf(ArqAsm, " %30s mul  %s\n",     BRANCO, Reg32[R]);
    if (Niv == NGLOBAL)
      fprintf(ArqAsm, " %30s mov  %s, offset %s:_%s\n", BRANCO, Reg32[R],
                                      SEG_DAD, Id);
    else
      fprintf(ArqAsm, " %30s lea  %s, %s:[ebp-%ld]\n",  BRANCO, Reg32[R],
                                      SEG_DAD, Des);
    fprintf(ArqAsm, " %30s add  %s, eax\n", BRANCO, Reg32[R]);
  }
}

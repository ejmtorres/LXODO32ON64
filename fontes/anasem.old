    if (Cat == CVAR) /* variavel local */
      fprintf(ArqAsm, " %30s mov  ebx, %s:[ebp-%ld]\n", BRANCO, SEG_DAD, Desl);
    else             /* parametro */
      fprintf(ArqAsm, " %30s mov  ebx, %s:[ebp+%ld]\n", BRANCO, SEG_DAD, Desl);
